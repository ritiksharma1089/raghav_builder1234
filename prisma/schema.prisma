generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id       String   @id @default(uuid())
  email    String   @unique
  name     String?
  isadmin  Boolean  @default(false)
  password String

  products Product[]  // One-to-many relationship, as users can have multiple products
}

model Product {
  id        String   @id @default(uuid())
  title     String
  price     String
  content   String
  published Boolean  @default(false)

  imagepath String
  origin    String?
  color     String?
  size      String?
  desc      String?

  authorId  String
  author    User     @relation(fields: [authorId], references: [id])

 
}


